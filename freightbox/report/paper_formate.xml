<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paper_format_bol_from" model="report.paperformat">
        <field name="name">Bill of Lading</field>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="dpi">90</field>
    </record>

    <report 
        string="Damco Bill of Lading Report"
        id="action_damco_bill_of_lading_report" 
        model="bill.of.lading" 
        report_type="qweb-pdf" 
        name="freightbox.damco_bill_of_lading_report" 
        file="freightbox.damco_bill_of_lading_report" />

    <record id="freightbox.action_damco_bill_of_lading_report" model="ir.actions.report">
        <field name="paperformat_id" ref="freightbox.paper_format_bol_from" />
    </record>

</odoo>
