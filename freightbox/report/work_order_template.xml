<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_work_order">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.basic_layout">
                <div class="page">
                    <div class="row">
                        <div class="col-12">
                            <table class="table table-bordered">
                            <header style="text-align:center;">Work Order</header>
                                <tr>
                                <td colspan="3" style="border: 1px solid black;">Carrier Booking Reference:</td>
                                <td colspan="3" style="border: 1px solid black;">
                                    <div t-field="o.carrier_booking"/>
                                </td>
                                <td colspan="3" style="border: 1px solid black;">Work Order Reference:</td>
                                <td colspan="3" style="border: 1px solid black;">
                                    <div t-field="o.workorder"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3" style="border: 1px solid black;">Container ID* :</td>
                                <td colspan="3" style="border: 1px solid black;">
                                    <div t-field="o.cont_id"/>
                                </td>
                                <td colspan="3" style="border: 1px solid black;">Transport Reference:</td>
                                <td colspan="3" style="border: 1px solid black;">
                                    <div t-field="o.transport_reference"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3" style="border: 1px solid black;">Pickup Location:</td>
                                <td colspan="3" style="border: 1px solid black;">
                                    <div t-field="o.pickup_loc_id"/>
                                </td>
                                <td colspan="3" style="border: 1px solid black;">Drop-off Location:</td>
                                <td colspan="3" style="border: 1px solid black;">
                                    <div t-field="o.dropoff_loc_id"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3" style="border: 1px solid black;">Mode for Pick up:</td>
                                <td colspan="3" style="border: 1px solid black;">
                                    <div t-field="o.pickup_mode"/>
                                </td>
                                <td colspan="3" style="border: 1px solid black;">Mode for Transport:</td>
                                <td colspan="3" style="border: 1px solid black;">
                                    <div t-field="o.dropoff_mode"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3" style="border: 1px solid black;">Carrier Handover:</td>
                                <td colspan="3" style="border: 1px solid black;">
                                    <div t-field="o.carrier_handover"/>
                                </td>
                                <td colspan="3" style="border: 1px solid black;">Gate cut-off:</td>
                                <td colspan="3" style="border: 1px solid black;">
                                    <div t-field="o.gate_cutoff"/>
                                </td>
                            </tr>
                            
                            </table>
                            
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>

    