<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Route Template form view  -->
        <record id="route_template_form_wiz" model="ir.ui.view">
            <field name="name">Route Templates</field>
            <field name="model">route.templates.wiz</field>
            <field name="arch" type="xml">
                <form string="Route Template Wiz">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="transport_id" invisible="1"/>
                            <field name="is_created_from_transport" invisible="0"/>
                            <field name="route_id" invisible="1"/>
                            <field name="is_created_from_route" invisible="1"/>
                        </group>
                        <group
                           attrs="{'invisible': [('is_created_from_transport','=',False), ('is_created_from_route','=',False)]}">
                            <p style="color:#bd1f69">You have already created one Route template. If you want to update
                                please click on Update button
                            </p>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                    <footer>
                        <button name="update_container_journey_template" string="Update Route Template"
                                 attrs="{'invisible': [('is_created_from_transport','=',False)]}" type="object"
                                class="oe_highlight"/>
                        <button name="create_container_journey_template" string="Create Route Template"
                                 attrs="{'invisible': [('is_created_from_transport','=',True)]}" type="object"
                                class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
        <!-- End -->

        <!-- ***************** Message Wizard Route Template Creation -->

        <record id="message_wizard_route_form" model="ir.ui.view">
            <field name="name">message.wizard.route.form</field>
            <field name="model">message.wizard.route</field>
            <field name="arch" type="xml">
                <form string="Route Template Success">
                    <p class="o_view_nocontent_smiling_face">
                        Successfully created Route Template
                    </p>
                    <footer>
                        <button name="action_ok" string="Ok" type="object" default_focus="1" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- ***************** Message Wizard Route Template Updation -->

        <record id="message_wizard_route_form2" model="ir.ui.view">
            <field name="name">message.wizard.route.form</field>
            <field name="model">message.wizard.route</field>
            <field name="arch" type="xml">
                <form string="Route Template Success">
                    <p class="o_view_nocontent_smiling_face">
                        Successfully Updated Route Template
                    </p>
                    <footer>
                        <button name="action_ok" string="Ok" type="object" default_focus="1" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
