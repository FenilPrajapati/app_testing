<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_form_freightbox" model="ir.ui.view">
        <field name="name">res.config.settings.form.freightbox</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="5"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="FreightBox" string="FreightBox" data-key="freightbox">
                    <h2>FreightBox</h2>
                    <div class="row mt16 o_settings_container" name="qualification_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="freightbox"
                            title=" FreightBox">
                            <div class="o_setting_left_pane">
                                <field name="track_count" readonly="1" force_save="1"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="track_count"/>
                                <div class="text-muted">
                                        Tracking APIs are called this number of times
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="freightbox"
                            title=" FreightBox">
                            <div class="o_setting_left_pane">
                                <field name="allowed_track_api_count" readonly="1" force_save="1"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="allowed_track_api_count"/>
                                <div class="text-muted">
                                        Tracking APIs are called this number of times
                                </div>
                            </div>
                        </div>
                    <!-- </div>
                </div> -->

                    <!-- <h2>Contact In-Active</h2>
                    <div class="row mt16 o_settings_container" name="qualification_setting_container"> -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="shipper_days"/>
                                <div class="text-muted">
                                    Add Shippers In-Active Days
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <span><field name="shipper_days" class="oe_inline"/> days</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="consignees_days"/>
                                <div class="text-muted">
                                    Add Consignees In-Active Days
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <span><field name="consignees_days" class="oe_inline"/> days</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="freightforwarders_days"/>
                                <div class="text-muted">
                                    Add FreightForwarders In-Active Days
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <span><field name="freightforwarders_days" class="oe_inline"/> days</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="nvocc_days"/>
                                <div class="text-muted">
                                    Add NVOCC In-Active Days
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <span><field name="nvocc_days" class="oe_inline"/> days</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="vendors_shipping_lines_days"/>
                                <div class="text-muted">
                                    Add Vendors Shipping lines In-Active Days
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <span><field name="vendors_shipping_lines_days" class="oe_inline"/> days</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="agent_days"/>
                                <div class="text-muted">
                                    Add agent In-Active Days
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <span><field name="agent_days" class="oe_inline"/> days</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- <div class="col-12 col-lg-6 o_setting_box" id="freightbox"
                            title=" FreightBox">
                            <div class="o_setting_left_pane">
                                <field name="allowed_track_api_count" readonly="1" force_save="1"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="allowed_track_api_count"/>
                                <div class="text-muted">
                                        Tracking APIs are called this number of times
                                </div>
                            </div>
                        </div> -->
                        <div class="col-12 col-lg-6 o_setting_box" id="freightbox"
                            title=" FreightBox">
                            <div class="o_setting_left_pane">
                                <field name="send_mail" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="send_mail"/>
                                <div class="text-muted">
                                    Send Auto Mail
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>

    <record id="action_freight_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="res_config_settings_form_freightbox"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'freightbox', 'bin_size': False}</field>
    </record>

</odoo>
