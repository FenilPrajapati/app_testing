<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ***************** Si Template form view - wizard -->
        <record id="si_template_form_view_wiz" model="ir.ui.view">
            <field name="name">Si Templates</field>
            <field name="model">si.templates.wiz</field>
            <field name="arch" type="xml">
                <form string="Si Template">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="si_id" invisible="1"/>
                            <field name="created_from_si" invisible="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <!--<button name="update_charge_template" string="Update Charges Template"
                                attrs="{'invisible': [('is_created_from_rc','=',False)]}"
                                type="object" class="oe_highlight"/>-->
                        <button name="action_create_si_template" string="Create SI Template"
                                type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>