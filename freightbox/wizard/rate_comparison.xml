<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ***************** Charges Template form view - wizard -->
        <record id="charges_template_form_view_wiz" model="ir.ui.view">
            <field name="name">Charges Templates</field>
            <field name="model">charges.templates.wiz</field>
            <field name="arch" type="xml">
                <form string="Charges Template">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="rfq_id" invisible="1"/>
                            <field name="is_created_from_rc" invisible="1"/>
                        </group>
                        <group attrs="{'invisible': [('is_created_from_rc','=',False)]}">
                            <p style="color:#bd1f69">You have already created one charges template. If you want to
                                update please click on Update button
                            </p>
                        </group>
                    </sheet>
                    <footer>
                        <button name="update_charge_template" string="Update Charges Template"
                                attrs="{'invisible': [('is_created_from_rc','=',False)]}"
                                type="object" class="oe_highlight"/>
                        <button name="create_charge_template" string="Create/Update Charges Template"
                                attrs="{'invisible': [('is_created_from_rc','=',True)]}"
                                type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="message_wizard_form" model="ir.ui.view">
            <field name="name">message.wizard.form</field>
            <field name="model">message.wizard</field>
            <field name="arch" type="xml">
                <form string="Charges Template Success">
                    <p class="o_view_nocontent_smiling_face">
                        Successfully created Charges Template
                    </p>
                    <footer>
                        <button name="action_close" string="Ok" type="object" default_focus="1" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="message_wizard_form_for_update_msg" model="ir.ui.view">
            <field name="name">message.wizard.form</field>
            <field name="model">message.wizard</field>
            <field name="arch" type="xml">
                <form string="Charges Template Updated">
                    <p class="o_view_nocontent_smiling_face">
                        Successfully updated Charges Template
                    </p>
                    <footer>
                        <button name="action_close" string="Ok" type="object" default_focus="1" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- ***************** Reject Reason Rate Comparision-->

        <record id="view_rc_reject_wiz" model="ir.ui.view">
            <field name="name">rc.reject.reason.form</field>
            <field name="model">rc.reject.reason</field>
            <field name="arch" type="xml">
                <form string="Reject Reason" version="7.0">
                    <group cols="2" colspan="2">
                        <field name="reject_reason" required="1"/>
                    </group>
                    <footer>
                        <button name="action_submit" string="Submit" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="act_rc_reject_wiz" model="ir.actions.act_window">
            <field name="name">Reject Reason</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rc.reject.reason</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_rc_reject_wiz"/>
        </record>

