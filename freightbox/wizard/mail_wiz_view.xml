<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mail_wiz_view" model="ir.ui.view">
        <field name="name">Mail</field>
        <field name="model">mail.wiz</field>
        <field name="arch" type="xml">
            <form string="Mail">
                <group clospan="4" col="4">
                    <field name="name" required="1"/>
                    <field name="partner_ids" widget="many2many_tags"/>
                </group>
                <field name="body" options="{'style-inline': true}"/>
                <field name="attachment_ids" widget="many2many_binary" string="Attach a file" nolabel="1" colspan="2"/>
                <footer>
                    <button name="send_mail" string="Send" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_mail_wiz_view" model="ir.actions.act_window">
        <field name="name">Mail</field>
        <field name="res_model">mail.wiz</field>
        <field name="type">ir.actions.act_window</field>
        <!--        <field name="view_type">form</field>-->
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="mail_wiz_view"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

</odoo>