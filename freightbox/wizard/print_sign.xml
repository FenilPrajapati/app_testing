<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="form_bol_print_sign_wiz" model="ir.ui.view">
        <field name="name">BolPrintSignWiz</field>
        <field name="model">bol.print.sign.wiz</field>
        <field name="arch" type="xml">
            <form string="BOL Print Signature">
                <sheet>
                    <group>
                        <field name="print_sign" required="1"/>
                        <field name="user_id" invisible="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_save_sign" string="Save Signature" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="bol_print_sign_action" model="ir.actions.act_window">
        <field name="name">Print Signature</field>
        <field name="res_model">bol.print.sign.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="base.model_res_users"/>
        <field name="binding_view_types">form</field>
    </record>

</odoo>