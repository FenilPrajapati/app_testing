<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="company_kyc_form_view_wiz" model="ir.ui.view">
        <field name="name">Company KYC</field>
        <field name="model">company.kyc.wiz</field>
        <field name="arch" type="xml">
            <form string="Company KYC">
                <sheet>
                    
                    <separator string="Upload Following Documents"/>
                    <group>
                        <field name="doc_list" readonly='1' invisible="1"/>
                        <field name="company_cust_type" readonly='1' invisible="1"/>
                        <field name="doc_attachment" widget="many2many_binary" invisible="1"/>

                    </group>
                    <group>
                        <div>
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="sole_selection" attrs="{'column_invisible' : [('parent.company_cust_type','!=','sole_proprietorship')]}"/>
                                    <field name="partnership_selection" attrs="{'column_invisible' : [('parent.company_cust_type','!=','partnership')]}"/>
                                    <field name="llp_selection"  attrs="{'column_invisible' : [('parent.company_cust_type','!=','limited_liability_partnership')]}"/>
                                    <field name="plc_selection"  attrs="{'column_invisible' : [('parent.company_cust_type','!=','private_or_public_limited_company')]}"/>
                                    <field name="doc_attachment" widget="many2many_binary" />
                                </tree>
                            </field>
                        </div>
                    </group>
                    <separator string="Declaration"/>
                    <div class="oe_title" style="max-width: fit-content;display: flex;">
                        <field name="declaration"/>
                        <label for="declaration"/>
                    </div>
                    
                </sheet>
                <footer>
                    <button name="action_company_kyc" string="Save" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="company_kyc_wiz_action" model="ir.actions.act_window">
        <field name="name">Company KYC</field>
        <field name="res_model">company.kyc.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>