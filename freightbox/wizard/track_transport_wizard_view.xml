<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="track_transport_wizard_form" model="ir.ui.view">
            <field name="name">Track Transport</field>
            <field name="model">track.transport.wizard</field>
            <field name="arch" type="xml">
                <form string="Transport">
                    <sheet>
                        <group>
                            <group>
                                <field name="transport_id" widget='radio' options="{'horizontal': true}" />
                            </group>    
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_track" string="Ok" type="object" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="track_transport_wizard_action" model="ir.actions.act_window">
            <field name="name">Track Transport</field>
            <field name="res_model">track.transport.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>