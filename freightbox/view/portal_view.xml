<odoo>

    <template id="portal_my_add_sign">
        <t t-call="portal.portal_layout">
        <div class="o_portal_security_body">
            <t t-set="additional_title">Security</t>
            <section>
                <h3>Change Sign</h3>
                <!-- <t t-set="path">password</t>
                <div class="alert alert-success" role="alert" t-if="success and success.get('password')">
                    Sign Updated!
                </div> -->

                <form action="/add_sign" method="post" class="oe_reset_password_form">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <input type="hidden" name="op" value="password"/>
                    <div t-if="error_message" class="alert alert-danger">
                        <t t-esc="error_message"/>
                    </div>
                    <div class="form-group">
                        <label for="current">New Sign:</label><br/>
                        <input type="text"
                            id="current" name="new_sign" required="required"/>
                    </div>
                    <div class="form-group">
                        <label for="new">Confirm Sign:</label><br/>
                        <input type="text"
                               id="new" name="confirm_sign" required="required"/>
                        <!-- <div class="invalid-feedback">
                            <t t-esc="get_error(errors, 'sign.confirm_sign')"/>
                        </div> -->
                    </div>

                    <button type="submit" class="btn btn-danger">Change Sign</button>
                </form>
            </section>

        </div></t>
    </template>

    <!-- <template id="ship_user_sign_portal" name="portal.portal_layout">
        <xpath expr="//div[hasclass('o_portal_my_security')]" position="inside">
            <a href="/my/security"><i class="fa fa-pencil mx-1"/>Upload Sign</a>
        </xpath>
    </template> -->

    <template id="ship_user_sign_portal" inherit_id="portal.portal_layout">
        <xpath expr="//div[hasclass('o_portal_my_security')]" position="inside">
            <p><a href="/add/my/sign"><i class="fa fa-pencil mx-1"/>Change Sign</a></p>
        </xpath>
    </template>

</odoo>