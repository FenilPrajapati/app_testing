        <!-- ************************ API Integration ************************** -->
        <!-- ********** API Integration tree view ********** -->
        <record id="api_integration_tree_view" model="ir.ui.view">
            <field name="name">API Integration</field>
            <field name="model">api.integration</field>
            <field name="arch" type="xml">
                <tree string="API Integration">
                    <field name="username"/>
                    <field name="password"/>
                    <field name="url"/>
                    <field name="key"/>
                    <field name="host"/>
                    <field name="last_executed_date"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- ********** API Integration form view ********** -->
        <record id="api_integration_form_view" model="ir.ui.view">
            <field name="name">API Integration</field>
            <field name="model">api.integration</field>
            <field name="arch" type="xml">
                <form string="API Integration">
                    <sheet>
                        <!--<button name="get_ip" type="object" string="IP Address" class="btn-primary"/>-->
                        <!-- <separator/>
                            <header>
                                <button name="%(freightbox.act_facility_code_wiz)d" type="action" string="Import Facility Code"  class="btn-primary"/>
