                        <group>
                            <group>
                                <field name="url"/>
                                <field name="host"/>
                                <field name="description"/>
                                <field name="name"/>
                                <field name="username"/>
                                <field name="token"/>
                            </group>
                            <group>
                                <field name="key"/>
                                <field name="last_executed_date"/>
                                <field name="model_id"/>
                                <field name="user_id"/>
                                <field name="ip_address"/>
                                <field name="password"/>
                                <field name="token_expiry_date"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

