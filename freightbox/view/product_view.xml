    <record model="ir.actions.act_window" id="action_container_products">
        <field name="name">Container Products</field>
        <field name="res_model">product.template</field>
        <field name="domain">[('is_freight_container','=',True), ('type', '=', 'service')]</field>
        <field name="context">{'default_is_freight_container':True, 'default_type': 'service',
            'default_invoice_policy':'delivery', 'default_purchase_method':'receive'}
        </field>
        <field name="search_view_id" ref="container_product_search_form_view"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_container_product_view_tree">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="container_products_tree"/>
        <field name="act_window_id" ref="action_container_products"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_container_product_view_form">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="container_products_form"/>
        <field name="act_window_id" ref="action_container_products"/>
    </record>


