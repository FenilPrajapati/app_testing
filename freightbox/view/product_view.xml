<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="container_product_search_form_view">
        <field name="name">container.product.search.form</field>
        <field name="model">product.template</field>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <search string="Container Products">
                <field name="name" string="Container"/>
                <field name="is_freight_container"/>
                <group expand='0' string='Group by...'>
                    <filter string='Container' name="is_freight_container"
                            context="{'group_by' : 'is_freight_container'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="container_products_tree" model="ir.ui.view">
        <field name="name">Container Type</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <tree string="Container Type">
<!--                <field name="container_name"/>-->
                <field name="iso_code_id"/>
                <field name="alias_code"/>
                <field name="description"/>
                <field name="size"/>
                <field name="volume"/>
                <field name="operator_id"/>
                <field name="seal_no"/>
                <field name="mode_id"/>
                <field name="live"/>
                <field name="inactive"/>
                <field name="length"/>
                <field name="breadth"/>
                <field name="height"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="container_products_form">
        <field name="name">Container Type</field>
        <field name="model">product.template</field>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <form string="Container Type">
                <sheet>
                    <field name="container_image" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                    <div class="oe_title">
                        
                        <span class="d-inline-block">
                            <field name="is_container_damaged"/>
                            <label for="is_container_damaged"/>
                        </span>
                        
                    </div>
                    <!-- <group>
                        <group>
                            <field name="is_container_damaged"/>
                        </group>
                        <group>
                            <field name="container_image" widget="image" class="oe_avatar" nolabel="1"/>
                        </group> -->
<!--                        <field name="container_name" string="Dummy Container ID"/>-->
                    <!-- </group> -->
                    <group>
                        <group>
                            <field name="iso_code_id" required="1" options="{'no_create': True, 'no_open': True}"/>
                            <field name="name" string="Product Name"/>
                            <field name="booking_id" readonly="1"/>
                            <field name="default_code" string="Container ID"/>
                            <field name="alias_code"/>
                            <field name="description"/>
                            <field name="size"/>
                            <field name="volume"/>
                        </group>
                        <group>
                            <field name="operator_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="seal_no"/>
                            <field name="soc"/>
                            <field name="mode_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="special_type"/>
                            <field name="live" attrs="{'invisible': [('special_type', '!=', 'reefer')]}"/>
                            <field name="inactive" attrs="{'invisible': [('special_type', '!=', 'reefer')]}"/>
                            <field name="length" attrs="{'invisible': [('special_type', 'not in', ('pl','fr','ot'))]}"/>
                            <field name="breadth" attrs="{'invisible': [('special_type', 'not in', ('pl','fr','ot'))]}"/>
                            <field name="height" attrs="{'invisible': [('special_type', 'not in', ('pl','fr','ot'))]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Cargo" name="cargo">
                            <field name="cargo_line_ids">
                                <tree string="Cargo" editable="bottom">
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="shipper_name"/>
                                    <field name="cosignee_name"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Damage" name="damage" attrs="{'invisible': [('is_container_damaged', '=', False)]}">
                            <field name="damage_line_ids">
                                <tree string="Damage" editable="bottom">
                                    <field name="damage_image" filename="damage_fname"/>
                                    <field name="damage_fname"/>
                                    <field name="description"/>

                                </tree>
                            </field>
                        </page>
                        <page string="General Information" name="general_info">
                            <group>
                                <group string="Container Product" name="container">
                                    <field name="is_freight_container"/>
                                </group>
                                <group string="Product Info" name="product_info">
                                    <field name="type"/>
                                    <field name="categ_id"/>
                                </group>
                            </group>
                            <group>
                                <group string="Sales" name="sales">
                                    <field name="invoice_policy" widget="radio"/>
                                </group>
                                <group string="Purchase" name="purchase">
                                    <field name="purchase_method" widget="radio"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


