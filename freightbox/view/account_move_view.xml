<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_freight" model="ir.ui.view">
        <field name="name">account.move.form.freight</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!---->
            <xpath expr="//label[@for='partner_id']" position="before">
                <field name="sale_order_id"
                       options="{'no_create': 1, 'no_edit': 1, 'no_open': 1}"
                       attrs="{'readonly': [('state','!=','draft')],
                       'invisible':[('move_type', 'in', ('in_invoice', 'in_receipt', 'in_refund'))]}"/>
                <field name="purchase_order_id"
                       options="{'no_create': 1, 'no_edit': 1, 'no_open': 1}"
                       attrs="{'readonly': [('state','!=','draft')],
                       'invisible':[('move_type', 'in', ('out_invoice', 'out_receipt', 'out_refund'))]}"/>
                <field name="bol_id"/>
                <field name="job_id"/>
            </xpath>

            <xpath expr="//header" position="after">
                <div class="alert alert-info text-center mb-3" role="alert"
                     attrs="{'invisible': [('total_prepaid_charges', '=', 0.0)]}">
                    Prepaid Invoice
                </div>
                <!--<widget name="web_ribbon" title="Prepaid Invoice" bg_color="bg-info"/>-->
            </xpath>

            <xpath expr="//button[@name='preview_invoice']" position="before">
                <button name="action_api_rate_wiz" string="Api Rate" states="draft" class="oe_highlight" type="object"/>
            </xpath>

            <xpath expr="//div[@name='journal_div']" position="after">
                <field name="billing_currency_id" options="{'no_create': 1, 'no_edit': 1, 'no_open': 1}"
                       attrs="{'readonly': [('state','!=','draft')] }"/>
            </xpath>

            <xpath expr="//field[@name='invoice_vendor_bill_id']" position="after">
                <separator string="BOOKING DETAILS"/>
                    <field name="booking_id"/>
                    <field name="place_of_origin"/>
                    <field name="place_of_destination"/>
                    <field name="is_send_mail" invisible="1" force_save="1" />
                <!-- </group> -->
            
            </xpath>

            <xpath expr="//field[@name='billing_currency_id']" position="after">
                <separator string="TRANSPORT LEG" attrs="{'invisible': [('job_id','=', False)] }"/>
                <field name="vessel_name" attrs="{'invisible': [('job_id','=', False)] }"/>
                <field name="voyage" attrs="{'invisible': [('job_id','=', False)] }"/>
                <field name="rotation" attrs="{'invisible': [('job_id','=', False)] }"/>
                <field name="imo_no" attrs="{'invisible': [('job_id','=', False)] }"/>
            </xpath>

            <!-- <xpath expr="//div[@name='journal_div']" position="after">
                <separator string="TRANSPORT LEG" attrs="{'invisible': [('job_id','=', False)] }"/>
                <field name="vessel_name" attrs="{'invisible': [('job_id','=', False)] }" />
                <field name="voyage" attrs="{'invisible': [('job_id','=', False)] }" />
                <field name="rotation" attrs="{'invisible': [('job_id','=', False)] }" />
                <field name="imo_no" attrs="{'invisible': [('job_id','=', False)] }" />
            </xpath> -->

            <!--<xpath expr="//page[@id='invoice_tab']" position="attributes">
                <attribute name="attrs">{'invisible':['|', ('sale_order_id','!=', False), ('purchase_order_id','!=', False)]}</attribute>
            </xpath>-->
            <xpath expr="//field[@name='amount_residual']" position="before">
                <field name="billing_currency_tot" widget='monetary'
                               options="{'currency_field': 'billing_currency_id', 'field_digits': True}"/>
                <field name="total_collect_charges" widget='monetary' string= "Sum of Collect (which is to be paid during cargo release)"
                               options="{'currency_field': 'billing_currency_id', 'field_digits': True}"/>
                        <!-- <span class="oe_inline o_form_label mr-3 ml-5">
                            <strong>Due Amount to be paid during cargo released</strong>
                        </span> -->
                <!-- <field name="billing_currency_tot" class="oe_subtotal_footer_separator"/> -->
                <!--<group >
                    <label for="billing_currency_tot"/>
                    <div name="journal_div" class="d-flex">
                        <field name="billing_currency_tot" widget='monetary'
                               options="{'currency_field': 'billing_currency_id', 'field_digits': True}"/>
                        <span class="oe_inline o_form_label mr-3 ml-5 oe_edit_only"
                              groups="base.group_multi_currency">in
                        </span>

                    </div>
                </group>-->
                <!--<group>
                     <label for="total_collect_charges"/>
                    <div name="journal_div" class="d-flex">
                        <field name="total_collect_charges" widget='monetary'
                               options="{'currency_field': 'billing_currency_id', 'field_digits': True}"/>
                        <span class="oe_inline o_form_label mr-3 ml-5"
                              groups="base.group_multi_currency">
                            <strong>Due Amount to be paid during cargo released</strong>
                        </span>

                    </div>

                </group>-->

            </xpath>
            <xpath expr="//page[@id='invoice_tab']" position="after">
                <page name='rate' string="PO Rate" attrs="{'invisible': [('purchase_order_id','=', False)]}">
                    <separator string="PO Charges"/>
                    <field name="charges_line">
                        <tree string="Charges" editable="bottom" default_order="prepaid desc">
                            <field name="charges_id" readonly="1"/>
                            <field name="charges_type" readonly="1" force_save="1"/>
                            <field name="container_type" readonly="1"/>
                            <field name="units" required="1" readonly="1"/>
                            <field name="unit_price" string="Cost Price" required="1" readonly="1"/>
                            <field name="new_unit_price" string="Sale Price" readonly="1" />
                            <field name="taxes_id" widget="many2many_tags" readonly="1"/>
                            <field name="tax_amt" readonly="1"/>
                            <field name="currency_id" string="Currency" readonly="1"/>
                            <field name="final_amount" readonly="1"/>
                            <field name="to_currency_id" required="1" readonly="1"/>
                            <field name="prepaid"/>
                            <field name="collect"/>
                            <field name="comment" readonly="1"/>
                        </tree>
                    </field>
                    <separator/>
                    <group>
                        <group>
                            <field name="total_prepaid_charges" readonly="1" widget='monetary'
                                options="{'currency_field': 'currency_id'}"/>                        
                        </group>
                        <group>
                            <field name="total_collect_charges" readonly="1" widget='monetary'
                                options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="total_freight_charge" readonly="1" widget='monetary'
                                options="{'currency_field': 'currency_id'}"/>
                            <field name="total_origin_charge" readonly="1" widget='monetary'
                                options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <group>
                            <field name="total_destination_charge" readonly="1" widget='monetary'
                                options="{'currency_field': 'currency_id'}"/>
                            <field name="total_charge" readonly="1" widget='monetary'
                                options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                   <!-- <group>
                        <group col="6">
                            <label for="total_collect_charges" class="o_form_label"
                                   string="Prepaid amount" nolabel="1" colspan="4"/>
                            <field name="total_prepaid_charges" widget='monetary'
                               options="{'currency_field': 'currency_id'}"/>

                        </group>
                    </group>
                    <group>
                        <group col="6">
                            <field name="total_collect_charges"/>
                            <label for="total_collect_charges" class="o_form_label"
                                   string="Collect amount to be paid after cargo released"
                                   nolabel="1" colspan="4"/>
                        </group>
                    </group>-->
                </page>
            </xpath>
            <xpath expr="//page[@id='invoice_tab']" position="after">
                <page name='rate' string="SO Rate" attrs="{'invisible': [('sale_order_id', '=', False)]}">
                    <separator string="SO Charges"/>
                    <field name="charges_line">
                        <tree string="SO Charges" editable="bottom" default_order="prepaid desc">
                            <field name="charges_id" readonly="1"/>
                            <field name="charges_type" readonly="1" force_save="1"/>
                            <field name="container_type" readonly="1"/>
                            <field name="units" required="1" readonly="1"/>
                            <field name="new_unit_price" string="Sale Price" readonly="1"/>
                            <field name="taxes_id" widget="many2many_tags" readonly="1"/>
                            <!--<field name="tax_amt" readonly="1"/>-->
                            <field name="currency_id" string="Currency" readonly="1"/>
                            <field name="sale_final_amount" readonly="1"/>
                            <field name="to_currency_id" required="1" readonly="1"/>
                            <field name="prepaid"/>
                            <field name="collect"/>
                            <field name="comment" readonly="1"/>
                        </tree>
                    </field>
                    <separator/>
                    <group>
                        <group>
                            <field name="total_prepaid_charges" readonly="1" widget='monetary'
                                options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <group>
                            <field name="total_collect_charges" readonly="1" widget='monetary'
                                options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="total_freight_charge" readonly="1" widget='monetary'
                                options="{'currency_field': 'currency_id'}"/>
                        
                            <field name="total_origin_charge" readonly="1" widget='monetary'
                                options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <group>
                            <field name="total_destination_charge" readonly="1" widget='monetary'
                                options="{'currency_field': 'currency_id'}"/>
                            <field name="total_charge" readonly="1" widget='monetary'
                                options="{'currency_field': 'currency_id'}"/>                        
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//page[@id='invoice_tab']" position="after">
                <page name='rate' string="JOB Rate" attrs="{'invisible': [('job_id','=',False)]}">
                    <field name="job_charge_line">
                        <tree string="charges" editable="bottom">
                            <field name="charge_type"/>
                            <field name="currency_amount"/>
                            <field name="currency_code"/>
                            <field name="unit_price"/>
                            <field name="quantity"/>
                            <field name="payment_term"/>
                            <field name="calculation_basis"/>
                            <!--<field name="final_amount" readonly="1"/>-->
                        </tree>
                    </field>
                    <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                        <div>
                            <label for="job_total_charge"/>
                        </div>
                        <field name="job_total_charge" nolabel="1" widget='monetary'
                               options="{'currency_field': 'currency_id'}"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//page[@id='invoice_tab']" position="after">
                <page name='rate' string="BOL Rate" attrs="{'invisible': [('bol_id','=', False)]}">
                    <field name="bol_charge_line">
                        <tree string="charges" editable="bottom">
                            <field name="charge_type"/>
                            <field name="currency_code"/>
                            <field name="payment_term"/>
                            <field name="quantity"/>
                            <field name="unit_price"/>
                            <field name="calculation_basis"/>
                            <field name="currency_amount"/>
                            <!--<field name="final_amount" readonly="1"/>-->
                        </tree>
                    </field>
                    <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                        <div>
                            <label for="bol_total_charge"/>
                        </div>
                        <field name="bol_total_charge" nolabel="1" widget='monetary'
                               options="{'currency_field': 'currency_id'}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_in_invoice_tree" model="ir.ui.view">
        <field name="name">account.out.invoice.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="attributes">
                <attribute name="optional">show</attribute>
            </xpath>

            <xpath expr="//field[@name='payment_state']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
        </field>
    </record>

</odoo>