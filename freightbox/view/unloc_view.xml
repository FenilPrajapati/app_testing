<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <!-- ************************ Location ************************** -->
        <!-- ********** Location tree view ********** -->
        <record id="location_tree_view" model="ir.ui.view">
            <field name="name">Location</field>
            <field name="model">location</field>
            <field name="arch" type="xml">
                <tree string="Location">
                    <field name="unloc_id"/>
                    <field name="country_id"/>
                    <field name="name"/>
                    <field name="state_id"/>
                    <field name="function"/>
                    <field name="status"/>
                    <field name="date"/>
                    <field name="iata"/>
                    <field name="latitude"/>
                    <field name="longitude"/>
                    <field name="remarks"/>

                </tree>
            </field>
        </record>
        <!-- ********** Location form view ********** -->
        <record id="location_form_view" model="ir.ui.view">
            <field name="name">Location</field>
            <field name="model">location</field>
            <field name="arch" type="xml">
                <form string="Location">
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="unloc_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="country_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="name"/>
                            <field name="state_id" domain="[('country_id', '=', country_id)]"/>
                            <field name="function"/>
                            <field name="status"/>
                            <field name="date"/>
                            <field name="iata"/>
                            <field name="latitude"/>
                            <field name="longitude"/>
                            <field name="remarks"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- ********** Action Location ********** -->

        <record id="action_location" model="ir.actions.act_window">
            <field name="name">Location</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">location</field>
            <field name="view_id" ref="location_tree_view"></field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- ************************ UNLOC ************************** -->
        <!-- ********** UNLOC tree view ********** -->
        <record id="unloc_tree_view" model="ir.ui.view">
            <field name="name">UNLOC</field>
            <field name="model">unloc</field>
            <field name="arch" type="xml">
                <tree string="UNLOC">
                    <field name="country_id"/>
                    <field name="unloc_name"/>
                    <field name="unloc_code"/>
                </tree>
            </field>
        </record>
        <!-- ********** UNLOC form view ********** -->
        <record id="unloc_form_view" model="ir.ui.view">
            <field name="name">UNLOC</field>
            <field name="model">unloc</field>
            <field name="arch" type="xml">
                <form string="UNLOC">
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="country_id" required="1" options="{'no_create': True, 'no_open': True}"/>
                            <field name="unloc_name" required="1"/>
                            <field name="unloc_code" required="1"/>
                        </group>
                        <group>
                            <group>
                                <field name="unloc_file" filename="unloc_fname"/>
                                <field name="unloc_fname" invisible="1"/>
                            </group>
                            <group>
                                <button name="button_import_unloc" type="object" string="Import UNLOC"
                                        class="oe_highlight"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- ********** Action UNLOC ********** -->

        <record id="action_unloc" model="ir.actions.act_window">
            <field name="name">UNLOC</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">unloc</field>
            <field name="view_id" ref="unloc_tree_view"></field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>
