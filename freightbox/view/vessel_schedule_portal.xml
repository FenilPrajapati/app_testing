<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="menu_vessel_schedule_form" model="website.menu">
            <field name="name">Vessel Schedule</field>
            <field name="url">/vessel_schedule</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence">59</field>
        </record>
    </data>

    <template id="vessel_schedule" name="Vessel Schedule">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <form role="form" action="/show/schedule" method="POST" enctype="multipart/form-data"
                          class="s_website_form checkout_autoformat">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div id="vessel_schedule_form">
                            <div class="row">
                                <div class="w-100"/>
                                <div t-attf-class="col-form-label col-6">
                                    <label class="col-form-label font-weight-normal label-optional"
                                           for="port_of_origin_id">Port of Loading
                                    </label>
                                    <select id="port_of_origin_id" name="port_of_origin_id" required="required"
                                            t-attf-class="form-control">
                                        <t t-foreach="port_of_origin_ids" t-as="pl">
                                            <option t-att-value="pl.id">
                                                <t t-esc="pl.name"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div t-attf-class="col-form-label col-6">
                                    <label class="col-form-label font-weight-normal label-optional" for="fpod_id">Port
                                        of Discharge
                                    </label>
                                    <select id="fpod_id" name="fpod_id" required="required" t-attf-class="form-control">
                                        <t t-foreach="fpod_ids" t-as="pd">
                                            <option t-att-value="pd.id">
                                                <t t-esc="pd.name"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div class="w-100"/>
                                <div t-attf-class="col-form col-6">
                                    <label class="col-form-label font-weight-normal label-optional" for="event_date">
                                        Date
                                    </label>
                                    <input type="date" name="event_date" id="event_date" required="required"
                                           autofocus="autofocus" t-attf-class="form-control" t-att-title="event_date"/>
                                </div>
                                <div t-attf-class="col-form col-6">
                                    <label class="col-form-label font-weight-normal label-optional" for="out_weeks">Out
                                        Weeks
                                    </label>
                                    <select id="out_weeks_id" name="out_weeks_id" t-attf-class="form-control">
                                        <option value="1_weeks_out">1 Weeks Out</option>
                                        <option value="2_weeks_out">2 Weeks Out</option>
                                        <option value="3_weeks_out">3 Weeks Out</option>
                                        <option value="4_weeks_out">4 Weeks Out</option>
                                        <option value="5_weeks_out">5 Weeks Out</option>
                                        <option value="6_weeks_out">6 Weeks Out</option>
                                        <option value="7_weeks_out">7 Weeks Out</option>
                                        <option value="8_weeks_out">8 Weeks Out</option>
                                    </select>
                                </div>
                                <div class="w-100"/>
                                <div t-attf-class="col-6">
                                    <label class="col-form-label font-weight-normal label-optional"
                                           for="direct_route">Direct Routing Only
                                    </label><br/>
                                    <input type="checkbox" name="direct_route"
                                           t-attf-class="control col-1" style="height: 50%;width: 5%;"/>
                                </div>
                                <div class="w-100"/>
                                <div class="clearfix oe_login_buttons text-center mb-1 pt-3">
                                    <button type="button" class="btn btn-primary pull-left btn-block">Search Schedules
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>

            
                            