        <!-- ********** Route form view ********** -->
        <record id="route_form_view" model="ir.ui.view">
            <field name="name">Route</field>
            <field name="model">route</field>
            <field name="arch" type="xml">
                <form string="Route">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_services"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-pencil-square-o"
                                    attrs="{'invisible': [('service_count', '=', 0)]}">
                                <field name="service_count" widget="statinfo" string="Services"/>
                            </button>
                        </div>
                        <group colspan="4" col="4">
                            <field name="port_of_origin_id" required="1"/>
                            <field name="fpod_id" required="1"/>
                            <!-- <field name="route_template_id" domain="[('route_template_line','!=',False)]"/> -->
                        </group>
                        <notebook>

                            <page name='route' string="Route">
                                <group>  
                                    <group>
                                        <field name="route_template_id" domain="[('route_template_line','!=',False)]"/>
                                    </group>
                                </group>
                                <!-- <separator/> -->
                                <header>
                                    <button name="action_create_route_template" type="object"
                                            string="Create Route Template" class="btn-primary"/>
                                </header>
                                <separator/>

                                <field name="route_template_line">
                                    <tree string="Route">
                                        <field name="port_of_origin"/>
                                        <field name="mode_id"/>
                                        <field name="fpod"/>
                                        <field name="estimated_departure_time"/>
                                        <field name="estimated_arrival_time"/>
                                        <field name="actual_departure_time"/>
                                        <field name="actual_arrival_time"/>
                                        <field name="delay_reason"/>
                                    </tree>
                                    <form string="Route Template">
                                        <group>
                                            <group>
                                                <field name="mode_id" required="1"/>
                                            </group>
                                        </group>
                                        <group>
                                            <group colspan="4" col="4">
                                                <field name="port_of_origin_id"/>
                                                <field name="fpod_id"/>

                                            </group>
                                        </group>
                                        <group colspan="4" col="4">
                                            <field name="estimated_departure_time"/>
                                            <field name="estimated_arrival_time"/>
                                            <field name="actual_departure_time"/>
                                            <field name="actual_arrival_time"/>
                                        </group>
                                        <group>
                                            <field name="delay_reason"/>
                                        </group>
                                        <notebook>
                                            <page name='service' string="Service">
                                                <field name="service_line" string="Service Lines">
                                                    <tree string="Service Lines" editable="bottom">
                                                        <field name="partner_id"/>
                                                        <field name="name"/>
                                                        <field name="description"/>
                                                        <field name="cost_price"/>
                                                        <field name="sale_price"/>
                                                        <field name="quantity"/>
                                                        <field name="currency_id"/>
                                                    </tree>
                                                </field>
                                            </page>
                                        </notebook>
                                    </form>

                                </field>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- ********** Action Route ********** -->

        <record id="action_route" model="ir.actions.act_window">
            <field name="name">Route</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">route</field>
            <field name="view_id" ref="route_tree_view"></field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
