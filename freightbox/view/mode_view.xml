<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <!-- ************************ Mode ************************** -->
        <!-- ********** Mode tree view ********** -->
        <record id="mode_tree_view" model="ir.ui.view">
            <field name="name">Mode</field>
            <field name="model">mode</field>
            <field name="arch" type="xml">
                <tree string="Transport Mode">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <!-- ********** Mode form view ********** -->
        <record id="mode_form_view" model="ir.ui.view">
            <field name="name">Mode</field>
            <field name="model">mode</field>
            <field name="arch" type="xml">
                <form string="Transport Mode">
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- ********** Action Mode ********** -->

        <record id="action_mode" model="ir.actions.act_window">
            <field name="name">Transport Mode</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mode</field>
            <field name="view_id" ref="mode_tree_view"></field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
