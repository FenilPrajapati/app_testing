        <!-- ************************ Container Type ************************** -->
        <!-- ********** Container Type tree view ********** -->
        <record id="container_type_tree_view" model="ir.ui.view">
            <field name="name">Container Type</field>
            <field name="model">container.type</field>
            <field name="arch" type="xml">
                <tree string="Container Type">
                    <field name="name"/>
                    <field name="iso_code_id"/>
                    <field name="alias_code"/>
                    <field name="description"/>
                    <field name="size"/>
                    <field name="volume"/>
                    <field name="operator_id"/>
                    <field name="seal_no"/>
                    <field name="mode_id"/>
                    <!-- <field name="live"/>
                    <field name="inactive"/> -->
                    <field name="length"/>
                    <field name="breadth"/>
                    <field name="height"/>
                </tree>
            </field>
        </record>
        <!-- ********** Container Type form view ********** -->
        <record id="container_type_form_view" model="ir.ui.view">
            <field name="name">Container Type</field>
            <field name="model">container.type</field>
            <field name="arch" type="xml">
                <form string="Container Type">
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="name" string="Dummy Container ID"/>
                            <field name="container_image" widget="image" class="oe_avatar" nolabel="1"/>
                        </group>
                        <group colspan="4" col="4">
                            <field name="iso_code_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="alias_code"/>
                            <field name="description"/>
                            <field name="size"/>
                            <field name="volume"/>
                            <field name="operator_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="seal_no"/>
                            <field name="soc"/>
                            <field name="mode_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="special_type" required="1"/>
                            <!-- <field name="live" attrs="{'invisible': [('special_type', '!=', 'reefer')]}"/>
                            <field name="inactive" attrs="{'invisible': [('special_type', '!=', 'reefer')]}"/> -->
