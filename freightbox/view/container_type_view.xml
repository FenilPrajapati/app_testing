                            <field name="breadth"
                                   attrs="{'invisible': [('special_type', 'not in', ('pl','fr','ot'))]}"/>
                            <field name="height" attrs="{'invisible': [('special_type', 'not in', ('pl','fr','ot'))]}"/>
                        </group>
                        <notebook>
                            <page string="Cargo" name="cargo">
                                <field name="cargo_line_ids">
                                    <tree string="Cargo" editable="bottom">
                                        <field name="name"/>
                                        <field name="description"/>
                                        <field name="shipper_name"/>
                                        <field name="cosignee_name"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Damage" name="damage">
                                <field name="damage_line_ids">
                                    <tree string="Damage" editable="bottom">
                                        <field name="damage_image" filename="damage_fname"/>
                                        <field name="damage_fname"/>
                                        <field name="description"/>

                                    </tree>
                                </field>
                            </page>

