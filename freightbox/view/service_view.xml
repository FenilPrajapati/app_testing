<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ************************ Service ************************** -->
        <!-- ********** Service tree view ********** -->
        <record id="service_tree_view" model="ir.ui.view">
            <field name="name">Service</field>
            <field name="model">service</field>
            <field name="arch" type="xml">
                <tree string="Service">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="cost_price"/>
                    <field name="sale_price"/>
                    <field name="quantity"/>
                    <field name="currency_id"/>
                </tree>
            </field>
        </record>


        <!-- ********** Service form view ********** -->
        <record id="service_form_view" model="ir.ui.view">
            <field name="name">Service</field>
            <field name="model">service</field>
            <field name="arch" type="xml">
                <form string="Service">
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="name"/>
                            <field name="description"/>
                            <field name="partner_id"/>
                            <field name="currency_id"/>
                        </group>
                        <group colspan="4" col="4">
                            <field name="cost_price"/>
                            <field name="sale_price"/>
                            <field name="quantity"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <!-- ********** Service Action ********** -->

        <record id="action_service_menu" model="ir.actions.act_window">
            <field name="name">Service</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">service</field>
            <field name="view_id" ref="service_tree_view"></field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- ********** Service Type tree view ********** -->
        <record id="service_type_tree_view" model="ir.ui.view">
            <field name="name">Service Type</field>
            <field name="model">service.type</field>
            <field name="arch" type="xml">
                <tree string="Service Type">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- ********** Service Type  form view ********** -->
        <record id="service_type_form_view" model="ir.ui.view">
            <field name="name">Service Type</field>
            <field name="model">service.type</field>
            <field name="arch" type="xml">
                <form string="Service Type">
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="name" required="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <!-- ********** Service Type Origin Action  ********** -->

        <record id="action_service_type" model="ir.actions.act_window">
            <field name="name">Service Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">service.type</field>
            <field name="view_id" ref="service_type_tree_view"></field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
