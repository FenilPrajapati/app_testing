<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="form_signature_auth" name="Signature Authentication">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure"/>
                <div class="container">
                    <ol class="o_portal_submenu breadcrumb mb-0 py-2 flex-grow-1 row">
                        <li class="breadcrumb-item ml-1">
                            <a href="/my/home" aria-label="Home" title="Home">
                                <i class="fa fa-home"/>
                            </a>
                        </li>
                        <li class="breadcrumb-item active ">
                            <a href="/signature_auth" aria-label="Signature Authentication"
                               title="Shipment Information">Signature Authentication
                            </a>
                        </li>
                    </ol>
                    <div style="width:100%; height: 500px; position:relative; top: 50px;">
                        <table style="width:100%;">
                            <tr>
                                <td width="10%">
                                    Signature
                                </td>
                                <td width="70%">
                                    <input type="text" id="signature" name="signature" t-attf-class="form-control" style="width:100%;"/>
                                    <input type="text" id="rec_id" name="rec_id" t-att-value="rec_id" t-attf-class="form-control" style="width:100%; display:none;"/>
                                    <input type="text" id="rec_type" name="rec_type" t-att-value="type" t-attf-class="form-control" style="width:100%; display:none;"/>
                                </td>
                                <td width="20%">
                                       <button class="btn btn-primary ml-4" style="background-color: #75b7b5;color: black" type="button" t-attf-name="check_sign" id="check_sign">Submit</button>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>