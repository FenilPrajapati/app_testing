<?xml version="1.0" encoding="utf-8"?>
<template>

    <t t-name="freightbox.JOBDashboard">
        <div class="o_job_dashboard container">
            <div class="row">
                <div class="col-sm-8">
                    <table class="table table-sm">
                        <tbody>
                            <tr>
                                <td class="o_text">
                                    <div>All Events</div>
                                </td>
                                <td class="o_main o_job_dashboard_action" title="Draft" name="freightbox.action_job" context='{"search_default_job_draft": true}'>
                                    <a href="#" style="color: white;"><t t-esc="values['draft']"/><br/>Draft</a>
                                </td>
                                <td class="o_main o_job_dashboard_action" title="SI Accepted" name="freightbox.action_job" context='{"search_default_job_si_accepted": true}'>
                                    <a href="#" style="color: white;"><t t-esc="values['si_accepted']"/><br/>SI Accepted</a>
                                </td>
                                <td class="o_main o_job_dashboard_action" title="Draft BoL" name="freightbox.action_job" context='{"search_default_job_draft_bol": true}'>
                                    <a href="#" style="color: white;"><t t-esc="values['draft_bol']"/><br/>Draft BoL</a>
                                </td>
                                <td class="o_main o_job_dashboard_action" title="On Hold" name="freightbox.action_job" context='{"search_default_job_hold": true}'>
                                    <a href="#" style="color: white;"><t t-esc="values['hold']"/><br/>On Hold</a>
                                </td>
                                <td class="o_main o_job_dashboard_action" title="Cargo Released" name="freightbox.action_job" context='{"search_default_job_cargo_released": true}'>
                                    <a href="#" style="color: white;"><t t-esc="values['cargo_released']"/><br/>Cargo Released</a>
                                </td>
                                <td class="o_main o_job_dashboard_action" title="Done" name="freightbox.action_job" context='{"search_default_job_done": true}'>
                                    <a href="#" style="color: white;"><t t-esc="values['done']"/><br/>Done</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </t>
        
</template>
